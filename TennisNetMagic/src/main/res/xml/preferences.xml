<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="deleteimage"
        android:title="Delete Image"
        android:summary="Delete Captured image after use"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="minlinesize"
        android:title="Minimum Line Size"
        android:summary="how long before a line"
        android:numeric="integer"
        android:maxLength="3"
        android:defaultValue="20"
        />

    <EditTextPreference
        android:key="threshold"
        android:title="Hough Threshold"
        android:summary="..."
        android:numeric="integer"
        android:maxLength="3"
        android:defaultValue="50"
        />

</PreferenceScreen>